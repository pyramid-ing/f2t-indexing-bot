{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@prd/apps/*": ["apps/*"],
      "@prd/libs/common/*": ["libs/common/src/lib/*"],
      "@prd/libs/exchange/*": ["libs/exchange/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
